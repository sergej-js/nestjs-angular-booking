{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"extends": ["@nedcloarbr/biome-config/nestjs"],
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"includes": ["src/**/*.ts", "test/**/*.ts"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"linter": {
		"includes": ["**"],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"quoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "none",
			"arrowParentheses": "always",
			"lineWidth": 120,
			"indentWidth": 4,
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentStyle": "tab",
			"lineEnding": "lf"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4,
			"indentStyle": "tab",
			"lineEnding": "lf",
			"lineWidth": 120,
			"trailingCommas": "none"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
